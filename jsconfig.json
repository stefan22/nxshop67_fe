{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["components/*"],
      "@/cstyles/*": ["components/styles/*"],
      "@/graphql/*": ["graphql/*"],
      "@/lib/*": ["lib/*"],
      "@/pages/*": ["pages/*"],
      "@/assets/*": ["assets/*"],
      "@/svgComponents/*": ["svgComponents/*"],
      "@/styles/*": ["styles/*"]
    }
  },

  "include": [
    "next-env.d.js",
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
